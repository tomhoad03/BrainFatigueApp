<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="fill_parent"
                                                   tools:context=".DashboardLeftFrag" android:id="@+id/frameLayout">
    <HorizontalScrollView
            android:id="@+id/activity_left_fragment_graph_horizontal"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:scrollbarThumbHorizontal="@color/custom_navy_A"
            android:isScrollContainer="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:id="@+id/activity_left_fragment_graph_horizontal_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/white">
            <TextView
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:text="@string/activity_dashboard_graph_1_title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/spartan"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/activity_left_fragment_graph_1"
                    android:layout_width="340dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_margin="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:text="@string/activity_dashboard_graph_2_title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/spartan"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/activity_left_fragment_graph_2"
                    android:layout_width="340dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:text="@string/activity_dashboard_graph_3_title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/spartan"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/activity_left_fragment_graph_3"
                    android:layout_width="340dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
            android:id="@+id/activity_left_fragment_reports_vertical_label"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="@string/activity_dashboard_right_fragment_divider_message"
            android:textColor="@color/grey_text"
            android:textSize="20sp"
            android:background="@color/off_white"
            app:fontFamily="@font/spartan"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_left_fragment_graph_horizontal"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_left_fragment_graph_big_container"
            android:layout_width="409dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:fadeScrollbars="false"
            android:background="@color/off_white"
            app:layout_constraintTop_toBottomOf="@+id/activity_left_fragment_reports_vertical_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:id="@+id/activity_left_fragment_reports_container_message"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:translationZ="90dp"
                android:gravity="center"
                android:text="@string/activity_dashboard_left_fragment_default_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/custom_navy_A"
                android:textSize="16sp"
                app:fontFamily="@font/spartan"/>

        <ScrollView
                android:id="@+id/activity_left_fragment_reports_vertical"
                android:layout_width="409dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:fadeScrollbars="false"
                android:background="@color/off_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/activity_left_fragment_reports_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>