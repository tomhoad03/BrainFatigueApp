<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="fill_parent"
                                                   tools:context=".DashboardLeftFrag" android:id="@+id/frameLayout">

    <HorizontalScrollView
            android:id="@+id/activity_left_fragment_graph_horizontal"
            android:layout_width="409dp"
            android:layout_height="212dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
            android:id="@+id/activity_left_fragment_reports_vertical"
            android:layout_width="409dp"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_left_fragment_graph_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_left_fragment_reports_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Example buttons go here -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>