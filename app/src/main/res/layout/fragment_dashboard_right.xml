<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="fill_parent"
                                                   tools:context=".DashboardRightFrag" android:id="@+id/frameLayout2">

    <HorizontalScrollView
            android:id="@+id/activity_right_fragment_graph_horizontal"
            android:layout_width="409dp"
            android:layout_height="212dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
            android:id="@+id/activity_right_fragment_reports_vertical"
            android:layout_width="409dp"
            android:layout_height="382dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_right_fragment_graph_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintHorizontal_bias="0.0">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="vertical">
            <Button
                    android:layout_width="350dp"
                    android:layout_height="84dp"
                    android:id="@+id/activity_right_fragment_example_report"
                    android:backgroundTint="@color/grey"
                    android:layout_marginTop="10dp"
                    app:cornerRadius="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/activity_right_fragment_example_report_main"
                    android:text="@string/activity_dashboard_right_main"
                    android:textColor="@color/custom_navy_A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationZ="90dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/activity_right_fragment_example_report"
                    app:layout_constraintStart_toStartOf="@id/activity_right_fragment_example_report"/>
            <TextView
                    android:id="@+id/activity_right_fragment_example_report_sub"
                    android:text="@string/activity_dashboard_right_sub"
                    android:textColor="@color/custom_navy_A"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationZ="90dp"
                    app:layout_constraintTop_toBottomOf="@id/activity_right_fragment_example_report_main"
                    app:layout_constraintStart_toStartOf="@id/activity_right_fragment_example_report_main"
                    android:layout_marginTop="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>