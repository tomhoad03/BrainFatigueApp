<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="fill_parent"
                                                   tools:context=".DashboardRightFrag" android:id="@+id/frameLayout2">
    <HorizontalScrollView
            android:id="@+id/activity_right_fragment_graph_horizontal"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:scrollbarThumbHorizontal="@color/custom_navy_A"
            android:isScrollContainer="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/activity_right_fragment_graph_horizontal_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/off_white">
            <TextView
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="Energy Level"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:fontFamily="@font/spartan"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/activity_right_fragment_graph_1"
                    android:layout_width="340dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_margin="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:text="Reaction Time (ms)"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:fontFamily="@font/spartan"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/activity_right_fragment_graph_2"
                    android:layout_width="340dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
            android:id="@+id/activity_right_fragment_reports_vertical_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----- All Responses -----"
            android:textColor="@color/grey_text"
            android:textSize="20sp"
            app:fontFamily="@font/spartan"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_right_fragment_graph_horizontal"/>

    <ScrollView
            android:id="@+id/activity_right_fragment_reports_vertical"
            android:layout_width="409dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:fadeScrollbars="false"
            app:layout_constraintTop_toBottomOf="@+id/activity_right_fragment_reports_vertical_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_right_fragment_reports_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>