<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SurveyEndActivity">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="364dp"
            android:layout_height="22dp"
            android:id="@+id/progressBar"
            android:progressTint="@color/custom_purple_B"
            android:progress="100"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"/>
    <TextView
            android:id="@+id/endSurveyMainMessage"
            android:layout_width="351dp"
            android:layout_height="76dp"
            android:text="@string/activity_survey_end_mainMessage"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/custom_navy_A"
            app:fontFamily="@font/spartan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="248dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="435dp"
            app:layout_constraintVertical_bias="1.0" android:minHeight="48dp"/>
    <TextView
            android:id="@+id/endSurveySubMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_survey_end_subMessage"
            android:textSize="18sp"
            android:textColor="@color/grey_text"
            android:background="@null"
            app:fontFamily="@font/spartan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endSurveyMainMessage" android:layout_marginTop="20dp"
            android:minHeight="48dp" android:maxWidth="200dp"/>
    <Button
            android:text="@string/activity_survey_submit"
            android:layout_width="361dp"
            android:layout_height="62dp" android:id="@+id/activity_survey_end_submit_button"
            android:backgroundTint="@color/custom_purple_B"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>