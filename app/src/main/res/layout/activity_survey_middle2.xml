<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SurveyMiddle2Activity">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="364dp"
            android:layout_height="22dp"
            android:id="@+id/progressBar"
            android:progressTint="@color/custom_purple_B"
            android:progress="11"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"/>
    <TextView
            android:layout_width="351dp"
            android:layout_height="76dp"
            android:text="@string/activity_survey_middle2_question"
            android:textColor="@color/custom_navy_A"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/activity_survey_middle2_question"
            app:fontFamily="@font/spartan" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/activity_survey_middle2_button1"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintEnd_toEndOf="@+id/activity_survey_middle2_button1" android:layout_marginTop="90dp"/>
    <TextView
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_survey_prompt"
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            android:id="@+id/activity_survey_middle2_prompt"
            app:layout_constraintTop_toBottomOf="@+id/activity_survey_middle2_question" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp"/>
    <Button
            android:backgroundTint="@color/grey"
            android:text="@string/activity_survey_middle2_at_home"
            android:textAllCaps="false"
            android:textColor="@color/custom_navy_A"
            android:textSize="28sp"
            android:layout_width="365dp"
            android:layout_height="196dp"
            android:id="@+id/activity_survey_middle2_button1"
            app:fontFamily="@font/spartan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/activity_survey_middle2_button2"
            app:layout_constraintTop_toBottomOf="@+id/activity_survey_middle2_prompt"
            app:layout_constraintVertical_bias="0.56"/>
    <Button
            android:backgroundTint="@color/grey"
            android:text="@string/activity_survey_middle2_somewhere_else"
            android:textAllCaps="false"
            android:textColor="@color/custom_navy_A"
            android:textSize="28sp"
            android:layout_width="365dp"
            android:layout_height="196dp"
            android:id="@+id/activity_survey_middle2_button2"
            app:fontFamily="@font/spartan"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="112dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>