<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SurveyMiddle1Activity">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="364dp"
            android:layout_height="22dp"
            android:id="@+id/progressBar"
            android:progressTint="@color/custom_purple_A"
            android:progress="1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"/>
    <TextView
            android:layout_width="351dp"
            android:layout_height="76dp"
            android:text="@string/activity_survey_middle1_question"
            android:textColor="@color/custom_navy_A"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/activity_survey_middle1_question"
            android:gravity="center"
            app:fontFamily="@font/spartan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp"/>

    <Button
            android:text="@string/activity_survey_next"
            android:layout_width="361dp"
            android:layout_height="62dp" android:id="@+id/activity_survey_middle1_next_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/battery" android:id="@+id/imageView3"
            tools:layout_editor_absoluteY="274dp" tools:layout_editor_absoluteX="79dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="225dp"
            app:layout_constraintVertical_bias="0.55"/>

    <com.google.android.material.slider.Slider
            android:id="@+id/activity_survey_middle1_slider"
            android:layout_width="271dp"
            android:layout_height="61dp"
            android:value="0"
            android:stepSize="10"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="-7dp"
            app:layout_constraintVertical_bias="0.53"
            android:rotation="270" tools:ignore="SpeakableTextPresentCheck"/>


</androidx.constraintlayout.widget.ConstraintLayout>