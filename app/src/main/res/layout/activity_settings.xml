<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_settings_title"
            android:textColor="@color/custom_navy_A"
            android:textStyle="bold"
            android:textSize="26sp"
            android:id="@+id/activity_settings_title"
            app:fontFamily="@font/spartan"
            app:layout_constraintStart_toStartOf="@+id/activity_settings_button_heading"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/activity_settings_button_heading"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="19dp"/>

    <TextView
            android:id="@+id/activity_settings_button_heading"
            android:text="@string/activity_settings_button_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_title"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/activity_settings_frequency_slider_label"
            android:text="@string/activity_settings_frequency_slider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="60dp"/>
    <TextView
            android:id="@+id/activity_settings_frequency_slider_text"
            android:text="@string/activity_settings_frequency_slider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="13sp"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_frequency_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>
    <Spinner
            android:id="@+id/activity_settings_frequency_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_settings_slider_barrier"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@id/activity_settings_frequency_slider_label"
            app:layout_constraintBottom_toBottomOf="@id/activity_settings_frequency_slider_label"/>

    <TextView
            android:id="@+id/activity_settings_available_slider_label"
            android:text="@string/activity_settings_available_slider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_frequency_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"/>
    <TextView
            android:id="@+id/activity_settings_available_slider_text"
            android:text="@string/activity_settings_available_slider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="13sp"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_available_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>
    <com.google.android.material.slider.RangeSlider
            android:id="@+id/activity_settings_available_slider"
            android:valueFrom="6"
            android:valueTo="24"
            android:stepSize="1"
            android:layout_width="240dp"
            android:layout_height="49dp"
            app:layout_constraintStart_toStartOf="@id/activity_settings_slider_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_available_slider_label"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_available_slider_label"/>

    <TextView
            android:id="@+id/activity_settings_unavailable_slider_label"
            android:text="@string/activity_settings_unavailable_slider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_available_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"/>
    <TextView
            android:id="@+id/activity_settings_unavailable_slider_text"
            android:text="@string/activity_settings_unavailable_slider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="13sp"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@id/activity_settings_unavailable_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>
    <com.google.android.material.slider.RangeSlider
            android:id="@+id/activity_settings_unavailable_slider"
            android:valueFrom="6"
            android:valueTo="24"
            android:stepSize="1"
            android:layout_width="240dp"
            android:layout_height="49dp"
            app:thumbColor="@color/custom_red"
            app:haloColor="@color/custom_red"
            app:trackColorActive="@color/custom_red"
            app:layout_constraintStart_toStartOf="@id/activity_settings_slider_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_unavailable_slider_label"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_unavailable_slider_label"/>

    <TextView
            android:id="@+id/activity_settings_summary_slider_label"
            android:text="@string/activity_settings_summary_slider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_unavailable_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"/>
    <TextView
            android:id="@+id/activity_settings_summary_slider_text"
            android:text="@string/activity_settings_summary_slider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_navy_A"
            android:textSize="13sp"
            android:translationZ="90dp"
            app:layout_constraintTop_toBottomOf="@id/activity_settings_summary_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>
    <com.google.android.material.slider.RangeSlider
            android:id="@+id/activity_settings_summary_slider"
            android:valueFrom="6"
            android:valueTo="24"
            android:stepSize="1"
            android:layout_width="240dp"
            android:layout_height="49dp"
            app:trackColorActive="@color/grey"
            app:trackColorInactive="@color/grey"
            app:layout_constraintStart_toStartOf="@id/activity_settings_slider_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_summary_slider_label"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_summary_slider_label"/>

    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/activity_settings_slider_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="activity_settings_frequency_slider_label,
                                           activity_settings_summary_slider_label,
                                           activity_settings_unavailable_slider_label,
                                           activity_settings_available_slider_label"
            tools:layout_editor_absoluteX="411dp"/>

    <TextView
            android:id="@+id/activity_settings_button_divider"
            android:text="@string/activity_settings_button_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_summary_slider"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/activity_settings_button_dark_mode"
            android:text="@string/activity_settings_button_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/off_white"
            android:textColor="@color/custom_navy_A"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_dark_mode_24"
            app:iconTint="@color/custom_navy_A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_button_divider"
            android:layout_marginTop="14dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:id="@+id/activity_settings_switch_dark_mode"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/custom_navy_A"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@id/activity_settings_button_dark_mode"
            app:layout_constraintBottom_toBottomOf="@id/activity_settings_button_dark_mode"
            app:layout_constraintEnd_toEndOf="@id/activity_settings_button_dark_mode" android:layout_marginEnd="16dp"/>

    <Button
            android:id="@+id/activity_settings_button_faq"
            android:text="@string/activity_settings_button_faq"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/off_white"
            android:textColor="@color/custom_navy_A"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_question_answer_24"
            app:iconTint="@color/custom_navy_A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_settings_button_dark_mode"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/activity_settings_button_faq_arrow"
            android:text="@string/activity_settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/spartan"
            android:textColor="@color/custom_navy_A"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@id/activity_settings_button_faq"
            app:layout_constraintBottom_toBottomOf="@id/activity_settings_button_faq"
            app:layout_constraintEnd_toEndOf="@id/activity_settings_button_faq" android:layout_marginEnd="28dp"
            app:layout_constraintVertical_bias="0.523"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_settings_button_about"
            android:text="@string/activity_settings_button_about"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/off_white"
            android:textColor="@color/custom_navy_A"
            android:textStyle="bold"
            app:icon="@drawable/ic_android_black_24dp"
            app:iconTint="@color/custom_navy_A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_settings_button_faq" android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/activity_settings_button_about_arrow"
            android:text="@string/activity_settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/spartan"
            android:textColor="@color/custom_navy_A"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@id/activity_settings_button_about"
            app:layout_constraintBottom_toBottomOf="@id/activity_settings_button_about"
            app:layout_constraintEnd_toEndOf="@id/activity_settings_button_about" android:layout_marginEnd="28dp"
            app:layout_constraintVertical_bias="0.523"/>

    <Button
            android:id="@+id/activity_settings_button_logout"
            android:text="@string/activity_settings_button_logout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/custom_red"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_login_24"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_settings_button_about" android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <!-- Commented out the + on the 'log out' button, looks better without?
    <TextView
            android:id="@+id/activity_settings_button_logout_arrow"
            android:text="@string/activity_settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/spartan"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@id/activity_settings_button_logout"
            app:layout_constraintBottom_toBottomOf="@id/activity_settings_button_logout"
            app:layout_constraintEnd_toEndOf="@id/activity_settings_button_logout" android:layout_marginEnd="28dp"
            app:layout_constraintVertical_bias="0.523"/>
    -->
</androidx.constraintlayout.widget.ConstraintLayout
>