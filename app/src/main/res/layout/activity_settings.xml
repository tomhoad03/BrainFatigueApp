<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back_arrow"
            android:id="@+id/activity_settings_back_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@drawable/ic_back_arrow"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_settings_title"
            android:textColor="@color/custom_navy_A"
            android:textStyle="bold"
            android:textSize="26sp"
            android:id="@+id/activity_settings_title"
            app:fontFamily="@font/spartan"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_back_button"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_back_button"/>

    <Button
            android:id="@+id/activity_settings_button_dark_mode"
            android:text="@+string/activity_settings_button_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_title" android:layout_marginTop="400dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:id="@+id/activity_settings_switch_dark_mode"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_button_dark_mode"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_button_dark_mode"
            app:layout_constraintEnd_toEndOf="@+id/activity_settings_button_dark_mode" android:layout_marginEnd="16dp"/>

    <Button
            android:id="@+id/activity_settings_button_faq"
            android:text="@+string/activity_settings_button_faq"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_button_dark_mode"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/activity_settings_button_faq_arrow"
            android:text="@+string/activity_settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/spartan"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_button_faq"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_button_faq"
            app:layout_constraintEnd_toEndOf="@+id/activity_settings_button_faq" android:layout_marginEnd="28dp"
            app:layout_constraintVertical_bias="0.523"/>

    <Button
            android:id="@+id/activity_settings_button_about"
            android:text="@+string/activity_settings_button_about"
            android:layout_width="409dp"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_button_faq" android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/activity_settings_button_about_arrow"
            android:text="@+string/activity_settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/spartan"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_button_about"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_button_about"
            app:layout_constraintEnd_toEndOf="@+id/activity_settings_button_about" android:layout_marginEnd="28dp"
            app:layout_constraintVertical_bias="0.523"/>

    <Button
            android:id="@+id/activity_settings_button_logout"
            android:text="@+string/activity_settings_button_logout"
            android:layout_width="409dp"
            android:layout_height="64dp"
            android:gravity="start|center_vertical"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/custom_red"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_button_about" android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/activity_settings_button_logout_arrow"
            android:text="@+string/activity_settings_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/spartan"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_button_logout"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_button_logout"
            app:layout_constraintEnd_toEndOf="@+id/activity_settings_button_logout" android:layout_marginEnd="28dp"
            app:layout_constraintVertical_bias="0.523"/>

</androidx.constraintlayout.widget.ConstraintLayout
>